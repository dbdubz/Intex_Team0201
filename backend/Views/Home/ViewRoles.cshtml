@{
}
@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

<h1>Roles</h1>

<p>Add a new <a asp-controller="Home" asp-action="CreateRole">role</a>.</p>
<table class="table-stribed table-bordered">
    <thead>
        <tr>
            <td>Id</td>
            <td>Name</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Name</td>
                @if (role.Name == "authenticated")
                {
                    <td>users with administrative privileges</td>
                }
                else
                {
                    <td>users without administrative privileges</td>
                }
            </tr>
        }
    </tbody>
</table>