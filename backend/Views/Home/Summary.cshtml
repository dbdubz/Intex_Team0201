            <div class="form-group">
                <label for="id">Burial Id</label>
                <select name="id">
                    @if (ViewBag.SelectedBurialId == null)
                    {
                        <option value="" selected></option>
                    }

                    @foreach (var x in ViewBag.BurialId)
                    {
                        if (x == null && ViewBag.SelectedBurialId == "empty")
                        {
                            <option value="empty" selected>empty</option>
                        }
                        else if (x == null || x.Trim() == "")
                        {
                            <option value="empty">empty</option>
                        }
                        else if (x == ViewBag.SelectedBurialId)
                        {
                            <option value="@x" selected>@x</option>
                        }
                        else
